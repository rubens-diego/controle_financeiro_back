{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "strictPropertyInitialization": false,
        "baseUrl": "./",
        "paths": {
            "@config/*": [
                "src/config/*"
            ],
            "@modules/*": [
                "src/modules/*"
            ],
            "@shared/*": [
                "src/shared/*"
            ]
        },
        "rootDirs": [
            "./src"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "lib": [
            "esnext"
        ],
    }
}